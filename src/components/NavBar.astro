<style>
  :root {
    --maintransition: all 0.6s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  .navbar {
    width: 100%;

    height: 150px;
    display: flex;
    align-items: center;
    padding: 0 2rem;
  }
  .btn {
    position: relative;
    transform: rotate(-90deg);
    cursor: pointer;
    transform-origin: left center;
    transition: var(--maintransition);
    margin-right: 3rem;
  }

  .btn:hover {
    transform: rotate(0);
  }

  .btn svg {
    width: 80%;
  }

  .btn:hover svg path {
    stroke-dashoffset: -164;
  }
  .btn svg path {
    stroke: black;
    fill: none;
    stroke-dasharray: 164;
    transition: var(--maintransition);
  }

  .btn .btn-circle {
    position: absolute;
    top: 50%;
    transform: translate(-30%, -50%);
    left: 0;
  }

  .btn .btn-label {
    font-size: 20px;
    text-transform: uppercase;
    position: relative;
  }

  .btn .btn-label:after {
    position: absolute;
    content: "";
    height: 1px;
    right: 0;
    bottom: -2px;
    width: 0;
    background: black;
    transition: var(--maintransition);
  }

  .btn:hover .btn-label:after {
    width: 100%;
  }
</style>
