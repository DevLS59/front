<div class="wrapperSplitCard" id="splitCard">
  <div class="part part-one">
    <div class="img-text">
      <h2>Dave Wood</h2>
    </div>
  </div>
  <div class="part part-two">
    <div class="img-text">
      <h2>Megan Kelly</h2>
    </div>
  </div>
</div>

<style>
  .wrapperSplitCard {
    width: 100%;
    height: 100vh;
    position: relative;
  }
  .part {
    height: 100%;
    width: 50%;
    position: absolute;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
  }

  .part .img-text {
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .part .img-text h2 {
    color: #fff;
    font-size: 52px;
  }

  .part-two,
  .part-one {
    background-size: cover;
    background-position: center center;
    -webkit-transition: 0.9s;
    transition: 0.9s;
  }

  .part-two h2,
  .part-one h2 {
    visibility: hidden;
    -webkit-transition: 0.9s;
    transition: 0.9s;
    -webkit-transform: scale(0);
    transform: scale(0);
  }

  .part-two:hover,
  .part-one:hover {
    background: #000;
  }

  .part-two:hover h2,
  .part-one:hover h2 {
    visibility: visible;
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  .part-one {
    left: 0;
    background-image: url("../images/personne01.jpg");
  }

  .part-two {
    right: 0;
    background-image: url("../images/personne02.jpg");
  }

  @media screen and (max-width: 768px) {
    .part-one {
      top: 0;
    }
    .part {
      width: 100%;
      height: 50%;
    }
    .part-two {
      top: 320px;
    }
  }
</style>
